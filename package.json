{
  "name": "loglayer",
  "version": "4.0.0",
  "description": "A abstraction / wrapper around logging libraries to provide a consistent way to specify context, metadata, and errors.",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "scripts": {
    "add-changeset": "changeset add",
    "add-readme": "git add README.md",
    "build": "npm run build:clean && npm run compile",
    "build:clean": "rm -rf build/*",
    "changeset": "changeset",
    "compile": "tsc",
    "debug": "ts-node-dev --inspect -- src/index.ts",
    "debug:break": "ts-node-dev --inspect-brk -- src/index.ts",
    "format": "npx @biomejs/biome format src --write",
    "lint": "npx @biomejs/biome lint src",
    "lint-staged": "lint-staged",
    "lint:check": "npx @biomejs/biome check --apply-unsafe src",
    "livetest:bunyan": "ts-node-dev livetests/bunyan.ts",
    "livetest:console": "ts-node-dev livetests/console.ts",
    "livetest:express": "ts-node-dev livetests/express.ts",
    "livetest:pino": "ts-node-dev livetests/pino.ts",
    "livetest:roarr": "ROARR_LOG=true ts-node-dev livetests/roarr.ts",
    "livetest:winston": "ts-node-dev livetests/winston.ts",
    "prepare": "husky install",
    "release": "changeset publish",
    "test": "jest",
    "test:ci": "jest --ci --coverage",
    "test:coverage:watch": "jest --coverage --watch",
    "test:debug": "node --inspect-brk node_modules/.bin/jest",
    "test:watch": "jest --watch",
    "toc": "toc-md README.md README.md",
    "ts-node-dev": "ts-node-dev",
    "version-packages": "changeset version"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/theogravity/loglayer.git"
  },
  "author": "Theo Gravity <theo@suteki.nu>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/theogravity/loglayer/issues"
  },
  "homepage": "https://github.com/theogravity/loglayer",
  "keywords": [
    "logging",
    "log",
    "roarr",
    "winston",
    "bunyan",
    "structured",
    "standard",
    "wrapper",
    "serialize",
    "error",
    "abstraction",
    "pino",
    "electron"
  ],
  "dependencies": {},
  "devDependencies": {
    "@biomejs/biome": "^1.6.4",
    "@changesets/changelog-github": "^0.5.0",
    "@changesets/cli": "^2.27.1",
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@types/bunyan": "^1.8.8",
    "@types/jest": "^28.1.1",
    "@types/node": "^17.0.42",
    "@types/roarr": "^2.14.3",
    "bunyan": "^1.8.15",
    "express": "^4.19.2",
    "husky": "^8.0.0",
    "jest": "^29.7.0",
    "jest-cli": "^29.7.0",
    "lint-staged": "^15.2.2",
    "pino": "^8.0.0",
    "roarr": "^7.11.0",
    "serialize-error": "8.1.0",
    "toc-md-alt": "^0.4.6",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.4.5",
    "winston": "^3.7.2"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx,html,css,json}": [
      "npm run format",
      "npm run lint:check"
    ]
  }
}
