{
  "name": "@loglayer/elysia",
  "description": "ElysiaJS integration for LogLayer with request-scoped logging, auto request logging, and error handling.",
  "version": "1.0.2",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "exports": {
    "import": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "require": {
      "types": "./dist/index.d.cts",
      "require": "./dist/index.cjs"
    }
  },
  "types": "./dist/index.d.ts",
  "sideEffects": false,
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/loglayer/loglayer.git",
    "directory": "packages/integrations/elysia"
  },
  "author": "Theo Gravity <theo@suteki.nu>",
  "keywords": [
    "logging",
    "log",
    "loglayer",
    "elysia",
    "elysiajs",
    "bun",
    "integration",
    "middleware"
  ],
  "scripts": {
    "build": "tsdown src/index.ts",
    "test": "vitest --run",
    "livetest": "tsx src/__tests__/livetest.ts",
    "clean": "rm -rf .turbo node_modules dist",
    "lint": "biome check --no-errors-on-unmatched --write --unsafe src",
    "lint:staged": "biome check --no-errors-on-unmatched --write --unsafe --staged src",
    "verify-types": "tsc --noEmit"
  },
  "dependencies": {},
  "devDependencies": {
    "@elysiajs/node": "1.4.4",
    "@internal/tsconfig": "workspace:*",
    "@types/node": "25.2.0",
    "elysia": "1.4.24",
    "loglayer": "workspace:*",
    "@loglayer/transport-simple-pretty-terminal": "workspace:*",
    "serialize-error": "13.0.1",
    "tsdown": "0.20.1",
    "tsx": "4.21.0",
    "typescript": "5.9.3",
    "vitest": "4.0.18"
  },
  "peerDependencies": {
    "elysia": ">=1.0.0",
    "loglayer": "*"
  },
  "bugs": "https://github.com/loglayer/loglayer/issues",
  "engines": {
    "node": ">=20"
  },
  "files": [
    "dist"
  ],
  "homepage": "https://loglayer.dev",
  "packageManager": "pnpm@10.20.0"
}
