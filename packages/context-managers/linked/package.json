{
  "name": "@loglayer/context-manager-linked",
  "description": "Context manager for loglayer that keeps context between parent and all children.",
  "version": "1.0.4",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "exports": {
    "import": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "require": {
      "types": "./dist/index.d.cts",
      "require": "./dist/index.cjs"
    }
  },
  "types": "./dist/index.d.ts",
  "license": "MIT",
  "repository": "loglayer/loglayer.git",
  "author": "Theo Gravity <theo@suteki.nu>",
  "keywords": [
    "logging",
    "log",
    "loglayer",
    "context",
    "linked",
    "context manager"
  ],
  "scripts": {
    "build": "tsup src/index.ts",
    "test": "vitest --run",
    "build:dev": "hash-runner",
    "clean": "rm -rf .turbo node_modules dist",
    "lint": "biome check --write --unsafe src && biome format src --write && biome lint src --fix",
    "verify-types": "tsc --noEmit"
  },
  "dependencies": {
    "@loglayer/context-manager": "workspace:*"
  },
  "devDependencies": {
    "loglayer": "workspace:*",
    "hash-runner": "2.0.1",
    "@types/node": "22.13.10",
    "@internal/tsconfig": "workspace:*",
    "tsup": "8.4.0",
    "typescript": "5.8.2",
    "vitest": "3.0.8"
  },
  "bugs": "https://github.com/loglayer/loglayer/issues",
  "engines": {
    "node": ">=18"
  },
  "files": [
    "dist"
  ],
  "homepage": "https://loglayer.dev",
  "packageManager": "pnpm@9.12.2"
}
