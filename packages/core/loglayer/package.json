{
  "name": "loglayer",
  "description": "A modern logging library with a fluent API for specifying log messages, metadata and errors",
  "version": "6.3.3",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "exports": {
    "import": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "require": {
      "types": "./dist/index.d.cts",
      "require": "./dist/index.cjs"
    }
  },
  "types": "./dist/index.d.ts",
  "license": "MIT",
  "repository": "loglayer/loglayer.git",
  "author": "Theo Gravity <theo@suteki.nu>",
  "keywords": [
    "logging",
    "log",
    "opentelemetry",
    "otel",
    "winston",
    "bunyan",
    "structured logs",
    "structured logging",
    "file rotation",
    "structured",
    "abstraction",
    "pino",
    "electron",
    "loglevel",
    "datadog",
    "log rotation",
    "rotation",
    "rotate logs",
    "typescript"
  ],
  "scripts": {
    "build": "tsup src/index.ts",
    "test": "vitest --run",
    "test:debug": "vitest --debug",
    "build:dev": "node_modules/.bin/hash-runner",
    "clean": "rm -rf .turbo node_modules dist",
    "lint": "biome check --write --unsafe src && biome format src --write && biome lint src --fix",
    "verify-types": "tsc --noEmit"
  },
  "dependencies": {
    "@loglayer/shared": "workspace:*",
    "@loglayer/plugin": "workspace:*",
    "@loglayer/transport": "workspace:*",
    "@loglayer/context-manager": "workspace:*"
  },
  "devDependencies": {
    "hash-runner": "2.0.1",
    "serialize-error": "12.0.0",
    "@internal/tsconfig": "workspace:*",
    "tsup": "8.4.0",
    "typescript": "5.8.2",
    "vitest": "3.0.9"
  },
  "bugs": "https://github.com/loglayer/loglayer/issues",
  "engines": {
    "node": ">=18"
  },
  "files": [
    "dist"
  ],
  "homepage": "https://loglayer.dev",
  "packageManager": "pnpm@9.12.2"
}
