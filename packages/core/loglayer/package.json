{
  "name": "loglayer",
  "description": "A unified logger that routes logs to various logging libraries, cloud providers, and OpenTelemetry while providing a fluent API for specifying log messages, metadata and errors",
  "version": "5.2.0",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "exports": {
    "import": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "require": {
      "types": "./dist/index.d.cts",
      "require": "./dist/index.cjs"
    }
  },
  "types": "./dist/index.d.ts",
  "license": "MIT",
  "repository": "loglayer/loglayer.git",
  "author": "Theo Gravity <theo@suteki.nu>",
  "keywords": [
    "logging",
    "log",
    "multi-transport",
    "opentelemetry",
    "otel",
    "winston",
    "bunyan",
    "structured",
    "standard",
    "wrapper",
    "serialize",
    "error",
    "abstraction",
    "pino",
    "electron",
    "loglevel",
    "datadog",
    "rotation",
    "rotate"
  ],
  "scripts": {
    "build": "tsup src/index.ts",
    "test": "vitest --run",
    "test:debug": "vitest --debug",
    "build:dev": "node_modules/.bin/hash-runner",
    "clean": "rm -rf .turbo node_modules dist",
    "lint": "biome check --write --unsafe src && biome format src --write && biome lint src --fix",
    "verify-types": "tsc --noEmit"
  },
  "dependencies": {
    "@loglayer/shared": "workspace:*",
    "@loglayer/plugin": "workspace:*",
    "@loglayer/transport": "workspace:*"
  },
  "devDependencies": {
    "@datadog/browser-logs": "*",
    "hash-runner": "2.0.1",
    "serialize-error": "11.0.3",
    "@internal/tsconfig": "workspace:*",
    "tsup": "8.3.5",
    "typescript": "5.7.2",
    "vitest": "2.1.8"
  },
  "bugs": "https://github.com/loglayer/loglayer/issues",
  "engines": {
    "node": ">=18"
  },
  "files": [
    "dist"
  ],
  "homepage": "https://loglayer.dev",
  "packageManager": "pnpm@9.12.2"
}
