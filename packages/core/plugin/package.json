{
  "name": "@loglayer/plugin",
  "description": "Base plugin used to implement plugins for loglayer.",
  "version": "2.2.4",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "exports": {
    "import": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "require": {
      "types": "./dist/index.d.cts",
      "require": "./dist/index.cjs"
    }
  },
  "types": "./dist/index.d.ts",
  "sideEffects": false,
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/loglayer/loglayer.git",
    "directory": "packages/core/plugin"
  },
  "author": "Theo Gravity <theo@suteki.nu>",
  "keywords": [
    "logging",
    "log",
    "loglayer",
    "plugin"
  ],
  "scripts": {
    "build": "tsdown src/index.ts",
    "clean": "rm -rf .turbo node_modules dist",
    "lint": "biome check --no-errors-on-unmatched --write --unsafe src",
    "lint:staged": "biome check --no-errors-on-unmatched --write --unsafe --staged src",
    "verify-types": "tsc --noEmit"
  },
  "dependencies": {
    "@loglayer/shared": "workspace:*"
  },
  "devDependencies": {
    "@internal/tsconfig": "workspace:*",
    "@types/node": "24.10.2",
    "tsdown": "0.17.2",
    "typescript": "5.9.3",
    "vitest": "4.0.15"
  },
  "bugs": "https://github.com/loglayer/loglayer/issues",
  "engines": {
    "node": ">=18"
  },
  "files": [
    "dist"
  ],
  "homepage": "https://loglayer.dev",
  "packageManager": "pnpm@10.20.0"
}
