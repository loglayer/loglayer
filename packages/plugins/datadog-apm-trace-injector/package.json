{
  "name": "@loglayer/plugin-datadog-apm-trace-injector",
  "description": "Injects DataDog APM traces to logs in LogLayer.",
  "version": "0.0.1",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "exports": {
    "import": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "require": {
      "types": "./dist/index.d.cts",
      "require": "./dist/index.cjs"
    }
  },
  "types": "./dist/index.d.ts",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/loglayer/loglayer.git",
    "directory": "packages/plugins/datadog-apm-trace-injector"
  },
  "author": "Theo Gravity <theo@suteki.nu>",
  "keywords": [
    "logging",
    "log",
    "loglayer",
    "plugin",
    "datadog",
    "trace",
    "injector",
    "stamp",
    "apm",
    "dd-trace"
  ],
  "scripts": {
    "build": "tsup src/index.ts",
    "test": "vitest --run",
    "livetest": "tsx src/__tests__/livetest.ts",
    "clean": "rm -rf .turbo node_modules dist",
    "lint": "biome check --no-errors-on-unmatched --write --unsafe src",
    "lint:staged": "biome check --no-errors-on-unmatched --write --unsafe --staged src",
    "verify-types": "tsc --noEmit"
  },
  "dependencies": {
    "@loglayer/plugin": "workspace:*",
    "@loglayer/shared": "workspace:*"
  },
  "devDependencies": {
    "loglayer": "workspace:*",
    "@types/node": "24.2.1",
    "@internal/tsconfig": "workspace:*",
    "express": "5.1.0",
    "dd-trace": "5.62.0",
    "tsup": "8.5.0",
    "tsx": "4.20.4",
    "typescript": "5.9.2",
    "vitest": "3.2.4"
  },
  "bugs": "https://github.com/loglayer/loglayer/issues",
  "engines": {
    "node": ">=18"
  },
  "files": [
    "dist"
  ],
  "homepage": "https://loglayer.dev",
  "packageManager": "pnpm@10.13.1"
}
