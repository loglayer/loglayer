{
  "$schema": "https://turbo.build/schema.json",
  "extends": ["//"],
  "tasks": {
    "clean": {},
    "lint": {
      "inputs": [
        "*.ts",
        "src/**",
        "tsconfig.json"
      ]
    },
    "verify-types": {
      "inputs": [
        "*.ts",
        "src/**",
        "tsconfig.json"
      ]
    },
    "build": {
      "dependsOn": [
        "@loglayer/shared#build",
        "@loglayer/transport#build"
      ],
      "inputs": [
        "src/**",
        "*.json"
      ],
      "outputs": ["dist/**"]
    },
    "build:dev": {
      "dependsOn": [
        "@loglayer/shared#build",
        "@loglayer/transport#build"
      ],
      "cache": false
    }
  }
}