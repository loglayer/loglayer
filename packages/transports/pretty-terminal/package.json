{
  "name": "@loglayer/transport-pretty-terminal",
  "description": "Prettifies log output in the terminal for the LogLayer logging library.",
  "version": "3.1.0",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "exports": {
    "import": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "require": {
      "types": "./dist/index.d.cts",
      "require": "./dist/index.cjs"
    }
  },
  "types": "./dist/index.d.ts",
  "license": "MIT",
  "repository": "loglayer/loglayer.git",
  "author": "Theo Gravity <theo@suteki.nu>",
  "keywords": [
    "logging",
    "log",
    "loglayer",
    "terminal",
    "pretty print",
    "transport"
  ],
  "scripts": {
    "build": "tsup src/index.ts",
    "build:dev": "hash-runner",
    "clean": "rm -rf .turbo node_modules dist",
    "lint": "biome check --write --unsafe src && biome format src --write && biome lint src --fix",
    "verify-types": "tsc --noEmit",
    "livetest": "tsx src/__tests__/livetest.ts"
  },
  "dependencies": {
    "@loglayer/shared": "workspace:*",
    "@loglayer/transport": "workspace:*",
    "better-sqlite3": "11.10.0",
    "chalk": "5.4.1",
    "cli-truncate": "4.0.0",
    "keypress": "0.2.1",
    "wrap-ansi": "9.0.0"
  },
  "devDependencies": {
    "@internal/tsconfig": "workspace:*",
    "@types/better-sqlite3": "7.6.13",
    "@types/chalk": "2.2.4",
    "@types/express": "5.0.1",
    "@types/keypress": "2.0.30",
    "@types/node": "22.15.17",
    "express": "4.21.2",
    "hash-runner": "2.0.1",
    "loglayer": "workspace:*",
    "serialize-error": "12.0.0",
    "tsup": "8.4.0",
    "tsx": "4.19.4",
    "typescript": "5.8.3"
  },
  "bugs": "https://github.com/loglayer/loglayer/issues",
  "engines": {
    "node": ">=18"
  },
  "files": [
    "dist"
  ],
  "homepage": "https://loglayer.dev",
  "packageManager": "pnpm@9.12.2"
}
