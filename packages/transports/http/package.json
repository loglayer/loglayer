{
  "name": "@loglayer/transport-http",
  "description": "HTTP transport for the LogLayer logging library.",
  "version": "1.0.2",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "exports": {
    "import": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "require": {
      "types": "./dist/index.d.cts",
      "require": "./dist/index.cjs"
    }
  },
  "types": "./dist/index.d.ts",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/loglayer/loglayer.git",
    "directory": "packages/transports/http"
  },
  "author": "Theo Gravity <theo@suteki.nu>",
  "keywords": [
    "logging",
    "log",
    "loglayer",
    "http",
    "transport"
  ],
  "scripts": {
    "build": "tsup src/index.ts",
    "test": "vitest --run",
    "build:dev": "hash-runner",
    "clean": "rm -rf .turbo node_modules dist",
    "lint": "biome check --write --unsafe src && biome format src --write && biome lint src --fix",
    "verify-types": "tsc --noEmit",
    "livetest": "tsx src/__tests__/livetest.ts"
  },
  "dependencies": {
    "@loglayer/transport": "workspace:*"
  },
  "devDependencies": {
    "dotenv": "16.5.0",
    "loglayer": "workspace:*",
    "hash-runner": "2.0.1",
    "@types/node": "22.15.17",
    "@internal/tsconfig": "workspace:*",
    "serialize-error": "12.0.0",
    "tsx": "4.20.3",
    "tsup": "8.5.0",
    "typescript": "5.8.3",
    "vitest": "3.2.4"
  },
  "bugs": "https://github.com/loglayer/loglayer/issues",
  "engines": {
    "node": ">=18"
  },
  "files": [
    "dist"
  ],
  "homepage": "https://loglayer.dev",
  "packageManager": "pnpm@10.10.0"
}
