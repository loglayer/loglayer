{
  "name": "@loglayer/transport-simple-pretty-terminal",
  "description": "Pretty log output in the terminal / browser / Next.js for the LogLayer logging library.",
  "version": "2.1.0",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "exports": {
    "import": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "require": {
      "types": "./dist/index.d.cts",
      "require": "./dist/index.cjs"
    }
  },
  "types": "./dist/index.d.ts",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/loglayer/loglayer.git",
    "directory": "packages/transports/simple-pretty-terminal"
  },
  "author": "Theo Gravity <theo@suteki.nu>",
  "keywords": [
    "loglayer",
    "transport",
    "terminal",
    "pretty",
    "logging",
    "simple",
    "nextjs",
    "browser"
  ],
  "scripts": {
    "build": "tsup src/index.ts",
    "test": "vitest --run",
    "build:dev": "hash-runner",
    "clean": "rm -rf .turbo node_modules dist",
    "lint": "biome check --write --unsafe src && biome format src --write && biome lint src --fix",
    "verify-types": "tsc --noEmit",
    "livetest": "tsx src/__tests__/livetest.ts"
  },
  "dependencies": {
    "@loglayer/transport": "workspace:*",
    "chalk": "5.4.1",
    "date-fns": "3.6.0",
    "wrap-ansi": "9.0.0"
  },
  "devDependencies": {
    "@internal/tsconfig": "workspace:*",
    "@types/chalk": "2.2.4",
    "@types/express": "5.0.3",
    "@types/node": "22.15.17",
    "express": "4.21.2",
    "hash-runner": "2.0.1",
    "loglayer": "workspace:*",
    "serialize-error": "12.0.0",
    "tsup": "8.5.0",
    "typescript": "5.8.3",
    "tsx": "4.20.3",
    "vitest": "3.2.4"
  },
  "bugs": "https://github.com/loglayer/loglayer/issues",
  "files": [
    "dist"
  ],
  "homepage": "https://loglayer.dev"
}
