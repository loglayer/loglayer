{
  "name": "@loglayer/transport-opentelemetry",
  "description": "OpenTelemetry transport for LogLayer for use with log processors.",
  "version": "2.2.0",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "exports": {
    "import": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "require": {
      "types": "./dist/index.d.cts",
      "require": "./dist/index.cjs"
    }
  },
  "types": "./dist/index.d.ts",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/loglayer/loglayer.git",
    "directory": "packages/transports/opentelemetry"
  },
  "author": "Theo Gravity <theo@suteki.nu>",
  "keywords": [
    "logging",
    "log",
    "loglayer",
    "opentelemetry",
    "otel",
    "transport"
  ],
  "scripts": {
    "build": "tsup src/index.ts",
    "test": "vitest --run",
    "build:dev": "hash-runner",
    "clean": "rm -rf .turbo node_modules dist",
    "lint": "biome check --write --unsafe src && biome format src --write && biome lint src --fix",
    "verify-types": "tsc --noEmit",
    "livetest": "tsx --import ./express-example/instrumentation.ts ./express-example/app.ts"
  },
  "dependencies": {
    "@loglayer/transport": "workspace:*",
    "@opentelemetry/api-logs": "0.57.2"
  },
  "devDependencies": {
    "@internal/tsconfig": "workspace:*",
    "@opentelemetry/api": "1.9.0",
    "@opentelemetry/resources": "1.30.1",
    "@opentelemetry/sdk-logs": "0.57.2",
    "@opentelemetry/sdk-node": "0.57.2",
    "@opentelemetry/sdk-trace-node": "1.30.1",
    "@opentelemetry/semantic-conventions": "1.30.0",
    "@opentelemetry/instrumentation-express": "0.47.1",
    "@opentelemetry/instrumentation-http": "0.57.2",
    "@types/express": "5.0.3",
    "@types/node": "22.15.17",
    "express": "4.21.2",
    "hash-runner": "2.0.1",
    "loglayer": "workspace:*",
    "serialize-error": "12.0.0",
    "tsup": "8.5.0",
    "tsx": "4.20.3",
    "typescript": "5.8.3",
    "vitest": "3.2.4"
  },
  "bugs": "https://github.com/loglayer/loglayer/issues",
  "engines": {
    "node": ">=18"
  },
  "files": [
    "dist"
  ],
  "homepage": "https://loglayer.dev",
  "packageManager": "pnpm@10.10.0"
}
