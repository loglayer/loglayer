{
  "$schema": "https://turbo.build/schema.json",
  "extends": ["//"],
  "tasks": {
    "clean": {},
    "test": {
      "inputs": [
        "*.ts",
        "src/**",
        "*.json"
      ]
    },
    "lint": {
      "inputs": [
        "*.ts",
        "src/**",
        "*.json"
      ]
    },
    "verify-types": {
      "inputs": [
        "*.ts",
        "src/**",
        "*.json"
      ]
    },
    "build": {
      "dependsOn": [
        "@loglayer/transport-http#build"
      ],
      "inputs": [
        "src/**",
        "*.json"
      ],
      "outputs": ["dist/**"]
    }
  }
}